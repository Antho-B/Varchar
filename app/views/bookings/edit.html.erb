<h1>Your booking details</h1>

<h3>Date</h3>
<p><%= @booking.start_date %> - <%= @booking.end_date %></p>
<h3>Total Price</h3>
<p>1 day = <%= @booking.character.price %></p>
<p>$ <%= (@booking.end_date - @booking.start_date) * @booking.character.price %></p>

<%= link_to 'Cancel', delete_booking_path(@booking), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to cancel?' }%>
