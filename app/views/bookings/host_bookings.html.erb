<h1>Manage Bookings</h1>
<div class="container">
  <% @host_bookings.each do |booking| %>
    <div class="card-product">
      <img src="<%= cl_image_path booking.character.photos.all.first.nil? ? '' : booking.character.photos.all.first.key, height: 300, width: 400, crop: :fill %>" class="card-img-top" alt="...">
      <div class="card-product-infos">
        <h2><%= booking.character.name %></h2>
        <p>Total $<%= booking.character.price %></p>
        <p><%= booking.start_date %> to <%= booking.end_date %></p>
        <div class="status">
          <p>Status: <%= booking.status %></p>
          <p><%= link_to "Confirm", edit_status_path(booking, 1), data: { 'turbo-method': :patch }%></p>
          <p><%= link_to "Deny", edit_status_path(booking, 2), data: { 'turbo-method': :patch }%></p>
        </div>
        <p>Booked by <strong><%= booking.user.email %></strong></p>
      </div>
    </div>
  <% end %>
</div>
